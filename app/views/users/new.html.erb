

<h1>Add new User</h1>

<hr>

<%= form_for :user, url: users_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :surname %><br>
      <%= f.text_field :surname %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>



<%= link_to 'Back to users', users_path %>
