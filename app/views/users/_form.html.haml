= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :surname
    %br/
    = f.text_field :surname
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :bio
    %br/
    = f.text_area :bio
  %p
    = f.submit